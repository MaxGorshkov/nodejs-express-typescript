{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug",
            "runtimeExecutable": "npm.cmd",
            "runtimeArgs": [
                "run",
                "debug"
            ],
            "port": 5858,
            "restart": true,
            "protocol": "legacy",
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "outFiles": ["${workspaceRoot}\\dist\\**"]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach",
            "port": 5858,
            "protocol": "legacy",
            "restart": true,
            "sourceMaps": true,
            "outFiles": ["${workspaceRoot}\\dist\\**"]
        },
        {
            "type": "node",
            "request": "launch",
			"name": "Debug mocha tests",
			"program": "${workspaceRoot}\\node_modules\\grunt-cli\\bin\\grunt",
            "args": ["test"],
            "sourceMaps": true,
			"cwd": "${workspaceRoot}",
			"outFiles": ["${workspaceRoot}\\test\\dist\\**"]
        },
        {
            "type": "node",
            "request": "launch",
			"name": "Debug history plugin",
			"program": "${workspaceRoot}\\node_modules\\grunt-cli\\bin\\grunt",
            "args": ["history", "--force"],
            "sourceMaps": true,
			"cwd": "${workspaceRoot}",
			"outFiles": ["${workspaceRoot}\\dist\\**"]
		}
    ]
}